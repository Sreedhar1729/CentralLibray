<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
 <Dialog id="_IDGenDialog1"  >
        <form:SimpleForm id="_IDGenSimpleForm1"  layout="ResponsiveGridLayout" class="simple">
         
            <form:content>
                <Title id="_IDGenTitle1"  text="Login Page" textAlign="Center"></Title>
                  
                        <Label id="_IDGenLabel1" 
                            text="User Name "
                            textAlign="Initial"
                            
                        />
                        <Input id="user"
                            type="Text"
                            width="80%"
                            textAlign="Initial"
                            placeholder="username"
                            
                        /> 

                    <Label id="_IDGenLabel2" 
                        text="Password"
                        textAlign="Initial"
                    />
                    <Input id="pwd"
                        type="Password"
                        width="80%"
                        textAlign="Initial"
                        placeholder="Password"
                    />
<VBox id="_IDGenVBox2" alignItems="Center">
                    <Button
                        icon="sap-icon://visits"
                        id="btn1"
                        text="Login"
                        type="Accept"
                        press="onBtnClick"
                    />
                    </VBox>
              
            </form:content>
        </form:SimpleForm>
          </Dialog>

</core:FragmentDefinition>