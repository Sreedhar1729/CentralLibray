<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog id="_IDGenDialog1">
        <form:SimpleForm
            id="idUserLoginForm"
            layout="ResponsiveGridLayout"
        >
            <form:content>
                <Title
                    id="idFormTitle"
                    text="User Login Page"
                    textAlign="Center"
                />

                <Label
                    id="idUserNameLabel"
                    text="User Name "
                    textAlign="Initial"
                />
                <Input
                    id="idUserInput"
                    type="Text"
                    width="80%"
                    textAlign="Initial"
                    placeholder="username"
                />

                <Label
                    id="idUserPasswordLabel"
                    text="Password"
                    textAlign="Initial"
                />
                <Input
                    id="idPasswordInput"
                    type="Password"
                    width="80%"
                    textAlign="Initial"
                    placeholder="Password"
                />
                <VBox
                    id="idUserLogin"
                    alignItems="Center"
                >
                    <Button
                        icon="sap-icon://visits"
                        id="btn"
                        text="Login"
                        type="Accept"
                        press="onUserBtnClick"
                    />
                </VBox>
            </form:content>
        </form:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
