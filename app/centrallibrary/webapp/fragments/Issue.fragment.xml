<core:FragmentDefinition 
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>

 <Dialog
        id="idIssueFragBook"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Issue BOOK Details"
    >
        <beginButton>
            <Button
                id="idIssueBookSave"
                text="Save"
                press="onIssueSave"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idEditBookCancel"
                text="Cancel"
                press="onIssueClose"
                type="Negative"
            />
        </endButton>
        <content>
            <!-- form creation -->
            <form:SimpleForm
                id="idIssueBookForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
             <Label
                    id="idIssueBookID"
                    text="ID"
                />
                <Input
                    id="idIssueBookIDVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{}"
                />
                <Label
                    id="idIssueBookISBN"
                    text="ISBN"
                />
                <Input
                    id="idIssueBookISBNVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{}"
                />

                <Label
                    id="idIssueBookTitle"
                    text="Title"
                />
                <Input
                    id="idIssueBookTitleVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{}"
                />
                <Label
                    id="idIssueBookQty"
                    text="Qty"
                />
                <Input
                    id="idIssueBookQtyVal"
                    type="Number"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{newBookModel>/quantity}"
                />

                <Label
                    id="idIssueBookPrice"
                    text="Price"
                />
                <Input
                    id="idIssueBookPriceVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{}"
                />
                <Label
                    id="idEditBookPages"
                    text="Pages"
                />
                <Input
                    id="idIssueBookPagesVal"
                    type="Number"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{}"
                />
                <Label
                    id="idIssueBookAuthor"
                    text="Author"
                />
                <Input
                    id="idIssueBookAuthorVal"
                    editable="true"
                    valueLiveUpdate="true"
                    liveChange="onEditBtnPress"
                    value="{}"
                />
                <Label
                    id="idIssueBookStatus"
                    text="Status"
                />
                <Input
                    id="idIssueBookStatusVal"
                    editable="true"
                    valueLiveUpdate="true"
                    value="{}"
                />
            </form:SimpleForm>
        </content>
    </Dialog>


</core:FragmentDefinition>