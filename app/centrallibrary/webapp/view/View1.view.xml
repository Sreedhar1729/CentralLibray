<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="com.app.centrallibrary.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
>
    <Page
        id="_IDGenApp1"
        title="{i18n>title}"
    >
        <VBox id="_IDGenVBox3" alignContent="Stretch">
            <Button
                id="_IDGenButton1"
                text="Admin"
            />
            <Button
                id="_IDGenButton2"
                text="User"
            />
        </VBox>

        <VBox
            id="_IDGenVBox1"
            alignItems="Center"
        >
            <form:SimpleForm
                id="_IDGenSimpleForm1"
                layout="ResponsiveGridLayout"
                class="simple"
            >
                <form:content>
                    <Title
                        id="_IDGenTitle1"
                        text="Login Page"
                        textAlign="Center"
                    />

                    <Label
                        id="_IDGenLabel1"
                        text="User Name "
                        textAlign="Initial"
                    />
                    <Input
                        id="user"
                        type="Text"
                        width="80%"
                        textAlign="Initial"
                        placeholder="username"
                    />

                    <Label
                        id="_IDGenLabel2"
                        text="Password"
                        textAlign="Initial"
                    />
                    <Input
                        id="pwd"
                        type="Password"
                        width="80%"
                        textAlign="Initial"
                        placeholder="Password"
                    />
                    <VBox
                        id="_IDGenVBox2"
                        alignItems="Center"
                    >
                        <Button
                            icon="sap-icon://visits"
                            id="btn"
                            text="Login"
                            type="Accept"
                            press="onBtnClick"
                        />
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </VBox>
    </Page>
</mvc:View>
