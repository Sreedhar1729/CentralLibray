<mvc:View
    xmlns:tnt="sap.tnt"
    controllerName="com.app.centrallibrary.controller.UserLoans"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <!-- <List id="idUserLoans" items="{path:'/BooksLoan'}">
    <StandardListItem  id="ss" title="{users}" counter="{users}"></StandardListItem>
    </List> -->
    <Table
        id="idUserLoans"
        items="{path:'/BooksLoan',filters:[{path:'Active',operator:'EQ',value1:'true'}]}"
        alternateRowColors="true"
        backgroundDesign="Transparent"
        mode="MultiSelect"
    >
     
     <!-- Header Tool Bar-->
        <headerToolbar>
            <OverflowToolbar id="idOverflowToolbar">
                <Title
                    id="idUserLoanTitle"
                    text="UserLoans"
                />
                <ToolbarSpacer id="idtoolbar" />
<!-- 
                <Button
                    id="idbutton"
                    type="Accept"
                    icon="sap-icon://add"
                /> -->
                <Button
                    id="idEditbutton"
                    type="Emphasized"
                    icon="sap-icon://edit"
                />
                <!-- <Button
                    id="idDeletebutton"
                    type="Reject"
                    icon="sap-icon://delete"
                /> -->
            </OverflowToolbar>
        </headerToolbar>

        <columns>
            <Column id="ididColumn">
                <Title
                    id="ididtitle"
                    text="BooksLoanId"
                />
            </Column>
            <Column id="idUserColumn">
                <Title
                    id="idUsertitle"
                    text="UserID"
                />
            </Column>
            <Column id="idBooksColumn">
                <Title
                    id="idBookstitle"
                    text="BooksISBN"
                />
            </Column>

            <Column id="iddueColumn">
                <Title
                    id="idduetitle"
                    text="Duedate"
                />
            </Column>
            <Column id="idbodColumn">
                <Title
                    id="idbodtitle"
                    text="LoanDatee"
                />
            </Column>

            <Column id="idUserLoanActiveCol">
                        <Label
                            id="idUserLoanActiveLabel"
                            text="Active"
                        />
                    </Column>
        </columns>

        <items>
            <ColumnListItem id="idColumnListBooksLoan">
                <cells>
                    <Text
                        id="idBISBNvalue"
                        text="{id}"
                    />
                    <Text
                        id="idBUservalue"
                        text="{users/id}"
                    />
                    <Text
                        id="idBdatevalue"
                        text="{books/isbn}"
                    />
                    <Text
                        id="idbodvalue"
                        text="{loandate}"
                    />
                    <Text
                        id="idduevalue"
                        text="{duedate}"
                    />
                    <Text
                        id="idUserLoanActivevalue"

                        text="{Active}"
                    />
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
