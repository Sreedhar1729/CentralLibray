<mvc:View xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout" xmlns:f="sap.f" controllerName="com.app.centrallibrary.controller.Login" displayBlock="true">
    <f:DynamicPage id="_IDGenDynamicPage1" headerExpanded="true">
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <Title id="_IDGenTitle1" text="CentralLibraySystemAPP"/>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader id="_IDGenDynamicPageHeader1">
                <HBox id="_IDGenHBox1" alignContent="SpaceBetween" width="100vw">
                    <VBox id="_IDGenVBox1" class="sapUiSmallMarginEnd">
                        <Label id="_IDGenLabel1" text="ISBN"/>
                        <Input id="_IDGenInput1" value=""/>
                    </VBox>

                    <VBox id="_IDGenVBox2" class="sapUiSmallMarginEnd">
                        <Label id="_IDGenLabel2" text="Author"/>
                        <Input id="_IDGenInput2" value=""/>
                    </VBox>

                    <VBox id="_IDGenVBox3" class="sapUiSmallMarginEnd">
                        <Label id="_IDGenLabel3" text="Status"/>
                        <Input id="_IDGenInput3" value=""/>
                    </VBox>

                    <VBox id="idGoButton" class="sapUiSmallMarginEnd">
                        <Label id="idGoButtonLabel" text=""/>
                        <Button id="idGoButtonValue" text="Go" type="Emphasized" press="onGoPress"/>
                    </VBox>
                    <VBox id="idClearFilterButton" class="sapUiSmallMarginEnd">
                        <Label id="idClearFilterButtonLabel" text=""/>
                        <Button id="idClearFilterButtonValue" text="Clear Filter" type="Emphasized" press="onClearFilterPress"/>
                    </VBox>
                </HBox>
            </f:DynamicPageHeader>
        </f:header>

        <f:content>
            <Table id="_IDGenTable1" mode="SingleSelectMaster" alternateRowColors="true" items="{/Books}" selectionChange="onSelectBooks" >
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar1">
                        <Title id="_IDGenTitle2" titleStyle="H1" text="Books"/>
                        <ToolbarSpacer id="idTableHeaderSpacer"/>
                        <Button id="idBtnAdd" icon="sap-icon://add" type="Ghost"/>
                        <Button id="idBtnDelete" icon="sap-icon://delete" type="Transparent"/>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column id="_IDGenColumn1">
                        <Title id="_IDGenTitle3" text="ISBN"/>
                    </Column>

                    <Column id="_IDGenColumn2">
                        <Title id="_IDGenTitle4" text="Title"/>
                    </Column>

                    <Column id="_IDGenColumn3">
                        <Title id="_IDGenTitle5" text="Author"/>
                    </Column>

                    <Column id="_IDGenColumn4">
                        <Title id="_IDGenTitle6" text="Price"/>
                    </Column>
                    <Column id="_IDGenColumn5">
                        <Title id="_IDGenTitle7" text="Status"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem1" type="Navigation">
                        <cells>
                            <Text id="_IDGenText1" text="{isbn}"/>
                            <Text id="_IDGenText2" text="{title}"/>
                            <Text id="_IDGenText3" text="{author}"/>
                            <Text id="_IDGenText4" text="{price}"/>
                            <Text id="_IDGenText5" text="{status}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>